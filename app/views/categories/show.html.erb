
<ul class="nav nav-tabs" >
	<li role="presentation" class="active"> <a href="/events">Home</a></li>
	
	<% if can? :my_events, Event.new %>
		<li role="presentation"> <a href="/events/my_events">My Events</a></li>
	<%end%>

  <li role="presentation" class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
      Categories <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <% @categories.each do |category| %>
      	<li><%= link_to category.name.capitalize, category_path(category) %></li>
      <% end %>
    </ul>
  </li>
</ul>

<div class="row">
	<% @events.each do |event|%>
	  <div class="col-sm-6 col-md-3">
	    <div class="thumbnail">
	      <%= image_tag(event.avatar.url, height: "100px", width: "252.5") if event.avatar %>
	      <div class="caption">
	        <h3 class="text-center"><%= link_to "#{event.name}", event_path(event) %></h3>
	        <p class="text-center"><%= event.categories.pluck(:name).map { |e| e.capitalize }.join(', ') %></p>
	        <div class="row">
	        	<div class="col-md-6">
	        		<p class="text-center"><%= event.user.username %></p>
	        	</div>
	        	<div class="col-md-6">
	        		<p class="text-center">
	        			<%= link_to event_path(event) do%>
							<span class="glyphicon glyphicon-eye-open"></span>
						<%end%>
						<% if can? :update, event %>
							<%= link_to edit_event_path(event) do %>
								<span class="glyphicon glyphicon-pencil"></span>
							<%end%>
							<%= link_to event_path(event), method: :delete, data: {confirm: "Are you sure?"} do %>
								<span class="glyphicon glyphicon-trash"></span>
							<%end%>	
						<% end %>
	        		</p>
	        	</div>
	        </div>

	        <div class="row">
	        	<div class="col-md-6 ">
	        		<p class="text-center"><%= event.end_datetime.strftime("%d %B %Y") %></p>
	        	</div>
	        	<div class="col-md-6">
	        		<p ><a href="#" class="btn btn-info" role="button">Buy Tickets</a></p>
	        	</div>
	        </div>
	        
	      </div>
	    </div>
	  </div>
	<%end%>
</div>
