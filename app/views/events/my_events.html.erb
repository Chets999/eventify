
<div class="page-header">
	<h3>My Events</h3>
</div>

<table class="table table-striped" >
	<tr >
		<th>#</th>
		<th>Event</th>
		<th>Organiser</th>
		<th>Action</th>
	</tr>
	<% @events.each_with_index do |event, i| %>
	<tr >
		<td><%= i+1 %></td>
		<td><%= image_tag(event.avatar.url, height: "100px") if event.avatar %><%= link_to "#{event.name}", event_path(event) %></td>
		<td><%= event.user.username %></td>
		<td >
			<%= link_to "Show", event_path(event) %>
			<% if can? :update, event %>
				- <%= link_to "Edit", edit_event_path(event) %> - <%= link_to "Delete", event_path(event), method: :delete, data: {confirm: "Are you sure you wanna delete #{event.name} ?"} %>
			<% end %>		
		</td>
	</tr>
	<% end %>
</table>

<p>Go <%= link_to "Back", events_path %></p>
